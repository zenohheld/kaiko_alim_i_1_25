#include <iostream>
using namespace std;

int main() {
    setlocale(LC_ALL, "rus");
    float a, b;
    cout << "Введите первое число: ";
    cin >> a;
    cout << "Введите второе число: ";
    cin >> b;
    unsigned char* byteA = (unsigned char*)&a;
    unsigned char* byteB = (unsigned char*)&b;
    cout << "\nПобитовое сравнение:\n";
    bool equal = true;
    for (int i = 0; i < 4; i++) {
        if (byteA[i] != byteB[i]) {
            equal = false;
            cout << "Байт " << i << " отличается: ";
            for (int j = 7; j >= 0; j--)
                cout << ((byteA[i] >> j) & 1);
            cout << " != ";
            for (int j = 7; j >= 0; j--)
                cout << ((byteB[i] >> j) & 1);
            cout << endl;
        }
    }
    if (equal)
        cout << "Числа полностью одинаковы побитово\n";
    return 0;
}
